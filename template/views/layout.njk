{% import '_fragments/navbar.njk' as navbar %}

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ page.title }}</title>
    <meta name="description" content="{{ page.description }}">
    <meta name="author" content="{{ app.author }}">

    <meta property="og:url" content="{{ url() }}">
    <meta property="og:image" content="{{ page.image|default(url('images/facebook.png')) }}">
    <meta property="og:title" content="{{ page.title }}">
    <meta property="og:description" content="{{ page.description }}">

    <script> document.documentElement.className = document.documentElement.className.replace("no-js", "js"); </script>
    <link rel="stylesheet" href="{{ url('https://fonts.googleapis.com/css?family=Raleway:700') }}">
    <link rel="stylesheet" href="{{ url('libraries/icomoon/style.css') }}">
    <link rel="stylesheet" href="{{ url('compiled/app.css') }}">
    <link rel="icon" href="{{ url('favicon.ico') }}">
</head>
<body>
    {% block navbar %}
        {# Defining navbar using block and macro allows
         # to extend navbar with custom content. #}
        {% call navbar.render() %}{% endcall %}
    {% endblock %}

    <main class="flex -no-gutter content {{ background }}">
        {% block content %}{% endblock %}
    </main>

    {% include '_fragments/footer.njk' %}
    {% include '_fragments/quick-access.njk' %}

    {% block scripts %}
        {% include '_fragments/indexes.njk' %}
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ url('libraries/jquery-3.2.1.min.js') }}"><\/script>')</script>
        <script src="{{ url('compiled/app.js') }}"></script>
    {% endblock %}
</body>
</html>
