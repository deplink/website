{% extends "layout.njk" %}
{% set background = 'bg-gray2white' %}

{% block content %}
    <div class="flex -wrap container">
        <aside class="xs-3 bg-gray">
            <ul class="menu mtm mbm">
                {% for group, articles in groupBy('group', referencePages) %}
                    <li class="menu-group">{{ group }}</li>
                    {% for article in articles %}
                        <li class="menu-item">
                            <a href="{{ url(article.url) }}">{{ article.command }}</a>
                        </li>
                    {% endfor %}
                {% endfor %}
            </ul>
        </aside>
        <article class="xs-9 pll bg-white">
            <div class="mtm mbm">
                <h1>{{ page.title }}</h1>
                <p class="mtx">{{ page.description }}</p>

                <div class="markdown mtm">
                    {% block markdown %}{% endblock %}
                </div>
            </div>
        </article>
    </div>
{% endblock %}
